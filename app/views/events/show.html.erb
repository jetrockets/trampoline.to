<%# HERO %>
<section class="heroBlock">
  <div class="items-center lg:grid lg:grid-cols-12 lg:gap-8 pt-24 lg:pt-0">
    <div class="mx-auto sm:text-center md:max-w-2xl lg:col-span-6 lg:text-left lg:flex lg:items-center">
      <div>
        <dl class="text-4xl font-extrabold tracking-tight sm:leading-none lg:text-5xl xl:text-6xl">
          <dt class="block mb-2 lg:mb-4">24 февраля 19:00</dt>
          <dd class="block text-gray-300">Trampoline #8</dd>
        </dl>
        <p class="mt-3 text-base text-gray-600 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
          Площадка: офис JetRockets в Твери
          <br />
          Адрес: Тверь, ул. 15 лет Октября, 10 Б
        </p>
      </div>
    </div>

    <div class="mt-8 pb-10 lg:mt-16 lg:col-span-6">
      <div class="bg-gray-50 sm:max-w-md sm:w-full sm:mx-auto sm:rounded-lg sm:overflow-hidden">
        <div class="px-4 py-8 sm:px-8">
          <strong class="block mb-4 text-lg">
            Запись на
            <%=
              link_to '8-ой митап', '#', class: 'text-indigo-600 underline-offset-2 border-b border-transparent hover:border-indigo-600 transition ease-in-out'
            %>
          </strong>
          <form action="#" method="POST" class="space-y-6">
            <input
              autofocus
              type="text"
              name="name"
              id="name"
              autocomplete="name"
              placeholder="Имя Фамилия"
              required="true"
              class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
            />
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              placeholder="Email"
              required="true"
              class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
            />
            <input
              type="tel"
              name="phone"
              id="phone"
              autocomplete="tel"
              placeholder="Телефон"
              required="true"
              class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
            />

            <div class="flex items-center">
              <input id="policy" name="policy" checked type="checkbox" class="w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" />
              <label for="policy" class="block ml-2 text-sm text-gray-900"> Я согласен с политикой конфиденциальности </label>
            </div>

            <button
              type="submit"
              class="flex justify-center w-full px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Записаться
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

