<div class="relative" data-controller="modal" data-action="keyup@window->modal#escClose">
  <div class="flex items-center justify-between px-4 py-6 sm:px-6 md:justify-start md:space-x-10">
    <div class="flex justify-start lg:w-0 lg:flex-1">
      <%= link_to_unless_current image_tag('logo.svg', class: 'logo w-auto h-10 sm:h-12', alt: 'Trampoline Logo'), root_url %>
    </div>

    <div class="-my-2 -mr-2 md:hidden">
      <button
        data-action="click->modal#show"
        type="button"
        class="inline-flex items-center justify-center p-2 text-gray-400 bg-white rounded-md hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
      >
        <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <nav class="hidden space-x-10 md:flex">
      <%= link_to 'Мероприятия', '#', class: 'font-bold text-gray-500 hover:text-gray-700' %>
      <%= link_to 'Спикеры', '#', class: 'font-bold text-gray-500 hover:text-gray-700' %>
      <%= link_to 'Контакты', '#', class: 'font-bold text-gray-500 hover:text-gray-700' %>
    </nav>

    <div class="items-center justify-end hidden md:flex md:flex-1 lg:w-0">
      <a
        href="#"
        class="inline-flex items-center justify-center px-4 py-2 ml-8 text-base font-medium text-gray-500 bg-white border border-gray-200 rounded-full shadow-sm whitespace-nowrap hover:bg-indigo-700 hover:border-indigo-700 hover:text-white"
      >
        Хочу выступить
      </a>
    </div>
  </div>

  <%# mobile menu %>
  <div class="absolute top-0 inset-x-0 p-2 transition transform origin-top-right hidden" data-modal-target="content">
    <div class="rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 bg-white divide-y-2 divide-gray-50">
      <div class="pt-5 pb-6 px-5">
        <div class="flex items-center justify-between">
          <div class="flex justify-start lg:w-0 lg:flex-1">
            <%= link_to_unless_current image_tag('logo.svg', class: 'logo w-auto h-10 sm:h-12', alt: 'Trampoline Logo'), root_url %>
          </div>
          <div class="-mr-2">
            <button
              data-action="click->modal#hide"
              type="button"
              class="bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
            >
              <span class="sr-only">Close menu</span>
              <!-- Heroicon name: outline/x -->
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>

        <div class="mt-6">
          <nav class="grid">
            <%= link_to 'Мероприятия', '#', class: 'py-4 font-bold text-gray-500 hover:text-gray-700 hover:bg-gray-50' %>
            <%= link_to 'Спикеры', '#', class: 'py-4 font-bold text-gray-500 hover:text-gray-700 hover:bg-gray-50' %>
            <%= link_to 'Контакты', '#', class: 'py-4 font-bold text-gray-500 hover:text-gray-700 hover:bg-gray-50' %>
          </nav>
        </div>
      </div>

      <div class="py-6 px-5 space-y-6">
        <div class="text-center md:text-left">
          <p class="text-gray-600">
            Тверь, 15 лет Октября, 10Б<br />
            Офис JetRockets на втором этаже здания.
          </p>
          <p class="mt-2">
            <%=
              link_to 'Напишите нам',
                      'mailto:hello@trampoline.to',
                      class: 'text-indigo-600 underline-offset-2 border-b border-transparent hover:border-indigo-600 transition ease-in-out'
            %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
